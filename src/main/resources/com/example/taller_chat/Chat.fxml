<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.taller_chat.ChatController">
    <center>
        <ListView fx:id="messageList" />
    </center>
    <bottom>
        <HBox alignment="center_right" spacing="10.0" padding="10.0">
            <TextField fx:id="messageInput" HBox.hgrow="ALWAYS" />
            <Button text="Send" onAction="#sendMessage" />
        </HBox>
    </bottom>
</BorderPane>

